!!! 5

%html
  %head
    %title Diner
    = stylesheet_link_tag    "application", :media => "all", "data-turbolinks-track" => true
    = javascript_include_tag "application"
    = csrf_meta_tags
    = favicon_link_tag 'favicon.ico'
    %meta{:name => "viewport", :content => "width=device-width"}

  %body.body
    -if notice.present?
      %p.notice= notice 
    - if alert.present?
      %p.alert.alert-info= alert 
    = yield

