%h1 Listing Guests

%table
  %thead
    %tr
      %th Firstname
      %th Lastname
      %th RSVP Code
      %th Email
      %th
      %th
      %th

  %tbody
    - @guests.each do |guest|
      %tr
        %td= guest.firstname
        %td= guest.lastname
        %td= guest.rsvp.code if guest.rsvp.present?
        %td= link_to 'Show', guest
        %td= link_to 'Edit', edit_guest_path(guest)
        %td= link_to 'Destroy', guest, method: :delete, data: {confirm: 'Are you sure?'}

= link_to 'New Guest', new_guest_path